		nos[0]=generateRandom(26);
		changeImage(opt1,nos[0]);
		int temp;
		
		
		do
		{
		temp=generateRandom(26);
		}while(temp==nos[0]);
		
		changeImage(opt2,temp);
		nos[1]=temp;
		
		do
		{
		temp=generateRandom(26);
		}while(temp==nos[0]||temp==nos[1]);
		
		changeImage(opt3,temp);
		nos[2]=temp;
		

		do
		{
		temp=generateRandom(26);
		}while(temp==nos[0]||temp==nos[1]||temp==nos[2]);
		
		changeImage(opt4,temp);
		nos[3]=temp;
